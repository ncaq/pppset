#!/bin/zsh -x

setopt EXTENDED_GLOB

pandoc --from markdown\
       --to beamer\
       --listings\
       --number-sections\
       --pdf-engine=lualatex\
       --template=`dirname $0`/../share/pppset/beamer.sty\
       --variable='luatexjapresetoptions'\
       --variable='mainfont:HackGen Console NFJ'\
       --variable='sansfont:HackGen Console NFJ'\
       --variable='monofont:HackGen Console NFJ'\
       --variable='CJKmainfont:HackGen Console NFJ'\
       --variable='colorlinks'\
       --output=${1:r}.tex\
       $1 &&
    lualatex\
        --draftmode\
        --interaction=nonstopmode\
        --shell-escape\
        ${1:r}.tex\
    &&\
    lualatex\
        --interaction=nonstopmode\
        --shell-escape\
        ${1:r}.tex ${1:r}.^*(log|md|pdf|tex)*
